{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@playdarts/api/core": ["libs/api/core/src/index.ts"],
      "@playdarts/api/game": ["libs/api/game/src/index.ts"],
      "@playdarts/api/users": ["libs/api/users/src/index.ts"],
      "@playdarts/core": ["libs/core/src/index.ts"],
      "@playdarts/core/authentication": [
        "libs/core/authentication/src/index.ts"
      ],
      "@playdarts/dashboard": ["libs/modules/dashboard/src/index.ts"],
      "@playdarts/game": ["libs/modules/game/src/index.ts"],
      "@playdarts/ui-kit": ["libs/ui-kit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
